<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_color"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Stop"
        android:textColor="@color/brand_color"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:paddingBottom="8dp"/>

    <ImageView
        android:id="@+id/placePhoto"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:src="@drawable/placeholder_viewpager_photos"
        android:layout_height="100dp"/>


    <!-- Place Name TextView -->
    <TextView
        android:id="@+id/textViewPlaceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:text="Place Name"
        android:layout_marginTop="8dp"
        android:textAppearance="?attr/textAppearanceBody1"
        android:paddingBottom="4dp"/>

    <!-- Address TextView -->
    <TextView
        android:id="@+id/textViewPlaceAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place Address"
        android:textColor="@color/dark_gray"
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:paddingBottom="16dp"/>

    <!-- Add Stop Button -->
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <com.google.android.material.button.MaterialButton
           android:id="@+id/buttonAddStop"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:text="Add Stop"
           app:iconTint="@color/primary_color"
           app:cornerRadius="8dp"
           android:paddingTop="16dp"
           android:paddingBottom="16dp"
           app:rippleColor="@color/brand_color"
           android:textColor="@color/primary_color"
           android:backgroundTint="@color/secondary_color"
           android:layout_marginEnd="8dp"
           app:icon="@drawable/add"
           app:iconGravity="textStart" />

       <com.google.android.material.button.MaterialButton
           android:id="@+id/buttonCancel"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:text="Cancel"
           android:backgroundTint="@color/primary_color"
           android:textColor="@color/gray2"
           app:rippleColor="@color/red"
           app:strokeColor="@color/gray"
           app:strokeWidth="1dp"
           app:cornerRadius="8dp"
           android:paddingTop="16dp"
           android:paddingBottom="16dp"

           app:iconGravity="textStart" />
   </LinearLayout>
</LinearLayout>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="16dp">

    <!-- Route Description -->
    <TextView
        android:id="@+id/routeDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Route Description"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/secondary_color"
        android:paddingBottom="8dp" />

    <!-- Distance Info Row -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="4dp">

        <ImageView
            android:id="@+id/distanceIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/distance" />

        <TextView
            android:id="@+id/distanceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance: "
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="@color/gray2"
            android:textSize="12sp"
            android:paddingStart="8dp" />

        <TextView
            android:id="@+id/distanceValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 km"
            android:textSize="12sp"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="@color/gray2" />
    </LinearLayout>

    <!-- Travel Time Info Row -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/travelTimeIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/time" />

        <TextView
            android:id="@+id/travelTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Travel Time: "
            android:textSize="12sp"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="@color/gray2"
            android:paddingStart="8dp" />

        <TextView
            android:id="@+id/travelTimeValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="0 min"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="@color/gray2" />
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_height="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSavedEvents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clipToPadding="false"/>



    <!-- LottieAnimationView for loading indicator -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        app:lottie_cacheComposition="true"
        app:lottie_rawRes="@raw/no_data"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/emptyDataLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lottieAnimation"
        android:textAlignment="center"
        android:layout_marginTop="-56dp"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Your Saved Events list is currently empty. To add an event, navigate to Events and save an event youâ€™re interested in."
        android:visibility="visible"/>

</RelativeLayout>

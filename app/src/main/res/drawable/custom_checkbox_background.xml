<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_gray" /> <!-- Background color when checked -->
            <corners android:radius="4dp" />
            <stroke
                android:width="2dp"
                android:color="@color/dark_gray" /> <!-- Border color when checked -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_gray" /> <!-- Background color when unchecked -->
            <corners android:radius="4dp" />
            <stroke
                android:width="2dp"
                android:color="@color/dark_gray" /> <!-- Border color when unchecked -->
        </shape>
    </item>
</selector>
